<div class="container-fluid index-container">
    <h3>Check the similarity of the images</h3>

    <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">Ã—</span></button>
            <%= message %>
        </div>
    <% end %>

    <%= form_with url: check_result_path, html: { class: "form-image" }, local: true do |f| %>
        <div class="form-group">
            <div class="row">
                <%= f.label :check_type %><br />
                <div class="col-md-12">
                    <div class="btn-group" data-toggle="buttons">
                        <label class="btn btn-default active">
                            <%= f.radio_button :type, '0', {:checked => true} %>libvips(IDHash)
                        </label>
                        <label class="btn btn-default">
                            <%= f.radio_button :type, '1' %>libvips(DHash)
                        </label>
                        <label class="btn btn-default">
                            <%= f.radio_button :type, '2' %>ImageMagick
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <%= f.label :select_2_images %><br />
                <div class="col-md-12">
                    <div class="form-group dropzone"></div>
                </div>
            </div>
        </div>        
        <%= f.hidden_field :image_id %>
            <%= f.submit(class: 'btn btn-lg btn-block btn-primary', value: 'check', data: { disable_with: "checking..." }) %>
    <% end %>
</div>
